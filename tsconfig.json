{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "react-native": ["node_modules/react-native-web"],
      "@expo/vector-icons": ["node_modules/@expo/vector-icons"],
      "react-native-svg": ["node_modules/react-native-svg-web"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "webpack.config.*"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "extends": "expo/tsconfig.base"
}
